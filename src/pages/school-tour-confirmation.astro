---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Banner from "../assets/beech-baron-b55-front.jpg";
import { FaCheckCircle } from "react-icons/fa";
import { PHONE_NUMBER } from "../consts";
---

<BaseLayout
  siteTitle="School Tour Request Received | High Tide Aviation"
  siteDescription="Thank you for requesting a school tour at High Tide Aviation! We have received your request and will be in touch shortly to confirm your visit to our Southport, Wilmington, or St. Simons Island facilities."
  siteKeywords="school tour confirmation, flight school visit, aviation tour request, High Tide Aviation"
>
  <Header
    slot="header"
    image={Banner}
    title="Tour Request Received"
    alt="Beech Baron B55 Front"
    ctaText="Return to Home"
    ctaLink="/"
  />

  <section class="py-16 px-5">
    <div class="flex flex-col items-center max-w-5xl mx-auto text-center gap-8">
      <FaCheckCircle className="text-9xl text-medium-blue" />
      
      <h2 class="text-3xl font-bold text-dark-blue">Thank You!</h2>
      
      <p class="text-gray-600 leading-loose max-w-2xl">
        We have received your request for a school tour at High Tide Aviation. 
        Our team will review your preferred date, time, and location, and we will 
        contact you within 1-3 business days to confirm your appointment.
      </p>
      
      <p class="text-gray-600 leading-loose">
        If you need immediate assistance or need to reschedule, please give us a call at <a
          class="hover:text-dark-blue hover:underline duration-300"
          href={`tel:${PHONE_NUMBER}`}>{PHONE_NUMBER}</a
        >.
      </p>
    </div>
  </section>
</BaseLayout>